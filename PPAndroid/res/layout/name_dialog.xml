<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
	    android:orientation="vertical" >
	    <ImageView
	    		android:id="@+id/name_image_area"
        		android:layout_width="128dp"
        		android:layout_height="128dp"
        		android:adjustViewBounds="false"
        		android:contentDescription="@string/pet_description"
        		android:scaleType="matrix"
        		android:layout_centerHorizontal="true"
        		android:src="@drawable/primary_sheet" />

    	<TextView
    	    android:id="@+id/name_text_area"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@id/name_image_area"
    	    android:layout_centerHorizontal="true"
    	    android:text="@string/name_text"
    	    android:textSize="18sp" />
    	<EditText 
    	    android:id="@+id/name_edit_area"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@id/name_text_area"
    	    android:layout_marginTop="10dp"
    	    android:layout_centerHorizontal="true"
    	    android:hint="@string/pet_name"/>
	    
	</RelativeLayout>
</ScrollView>
