    	android:paddingRight="@dimen/small_horizontal_margin"
    	android:paddingTop="@dimen/small_vertical_margin">
	    <ImageView
	    	android:id="@+id/pet_area1"
        	android:layout_width="64dp"
        	android:layout_height="64dp"
        	android:adjustViewBounds="false"
        	android:contentDescription="@string/pet_description"
        	android:scaleType="matrix"
        	android:src="@drawable/egg_sheet_small" />
	    <View android:layout_width="0dip"
	        android:layout_height="1dp"
	        android:layout_weight="0.05"/>
    	<RelativeLayout
    	    android:id="@+id/name_and_species1"
    	    android:layout_width="0dip"
    	    android:layout_height="match_parent"
