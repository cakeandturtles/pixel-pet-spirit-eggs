<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".InventoryActivity">

    <RelativeLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
        
        <TextView
            android:id="@+id/inv_pocket_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/food_pocket_title"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
        	android1:id="@+id/next_pocket_button"
        	style="?android:attr/buttonStyleSmall"
        	android1:layout_width="wrap_content"
        	android1:layout_height="wrap_content"
        	android1:layout_alignRight="@id/inv_pocket_title"
        	android1:layout_marginBottom="18dp"
        	android:background="@drawable/round_button"
        	android:onClick="NextPocket"
        	android:textColor="@color/transgrey"
        	android1:paddingBottom="4dp"
        	android1:paddingTop="0dp"
        	android1:text="@string/next_pet_button"
        	android1:textSize="32sp" />
    	<Button
	        android1:id="@+id/prev_pocket_button"
        	style="?android:attr/buttonStyleSmall"
        	android1:layout_width="wrap_content"
        	android1:layout_height="wrap_content"
        	android1:layout_alignLeft="@id/inv_pocket_title"
        	android1:layout_marginBottom="18dp"
        	android:background="@drawable/round_button"
        	android:gravity="center"
        	android:onClick="PrevPocket"
        	android:textColor="@color/transgrey"
        	android1:paddingBottom="4dp"
        	android1:paddingTop="0dp"
        	android1:text="@string/prev_pet_button"
        	android1:textSize="32sp" />
    
    	<LinearLayout
	        android:id="@+id/inventory_layout"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" 
        	android:layout_below="@id/inv_pocket_title"
	    	android:orientation="vertical">
		</LinearLayout>
	</RelativeLayout>
</ScrollView>